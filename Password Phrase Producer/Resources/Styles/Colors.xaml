<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ========================================== -->
    <!-- Design System - Unified Color Palette     -->
    <!-- ========================================== -->

    <!-- Primary Brand Colors -->
    <Color x:Key="BrandPrimary">#4A5CFF</Color>
    <Color x:Key="BrandPrimaryDark">#3B4AD1</Color>
    <Color x:Key="BrandAccent">#7B8CFF</Color>
    <Color x:Key="BrandSuccess">#63F5A8</Color>
    <Color x:Key="BrandError">#FF7474</Color>
    <Color x:Key="BrandWarning">#FFB84A</Color>
    <Color x:Key="BrandLink">#58A7FF</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundDark1">#101018</Color>
    <Color x:Key="BackgroundDark2">#141426</Color>
    <Color x:Key="BackgroundDark3">#0F111A</Color>
    <Color x:Key="BackgroundCard">#1B2036</Color>
    <Color x:Key="BackgroundInput">#1F2338</Color>
    <Color x:Key="BackgroundElevated">#252538</Color>
    <Color x:Key="BackgroundOverlay">#CC0B0D1A</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#E8EBFF</Color>
    <Color x:Key="TextTertiary">#9EA3C4</Color>
    <Color x:Key="TextDisabled">#5A6080</Color>
    <Color x:Key="TextMuted">#7F85B2</Color>
    <Color x:Key="TextPlaceholder">#7F85B2</Color>

    <!-- Icon Button Colors -->
    <Color x:Key="IconButtonBackground">#1F2338</Color>
    <Color x:Key="IconButtonText">#CFD3FF</Color>
    <Color x:Key="IconButtonDestructive">#3B2232</Color>

    <!-- Border/Divider Colors -->
    <Color x:Key="BorderSubtle">#2A2A3A</Color>
    <Color x:Key="BorderDefault">#2A2F4A</Color>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#25000000</Color>
    <Color x:Key="ShadowColorStrong">#40000000</Color>

    <!-- Legacy Colors (for compatibility) -->
    <Color x:Key="Primary">#4A5CFF</Color>
    <Color x:Key="PrimaryDark">#3B4AD1</Color>
    <Color x:Key="PrimaryDarkText">#F5F6FA</Color>
    <Color x:Key="Secondary">#4BCFFA</Color>
    <Color x:Key="SecondaryDarkText">#00A8FF</Color>
    <Color x:Key="Tertiary">#1E272E</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimary}"/>
    <SolidColorBrush x:Key="BrandPrimaryDarkBrush" Color="{StaticResource BrandPrimaryDark}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCard}"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="{StaticResource BackgroundInput}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- ========================================== -->
    <!-- Design System - Spacing Values            -->
    <!-- ========================================== -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">12</x:Double>
    <x:Double x:Key="SpacingLG">16</x:Double>
    <x:Double x:Key="SpacingXL">24</x:Double>
    <x:Double x:Key="SpacingXXL">32</x:Double>

    <!-- ========================================== -->
    <!-- Design System - Corner Radius             -->
    <!-- ========================================== -->
    <x:Double x:Key="RadiusSM">8</x:Double>
    <x:Double x:Key="RadiusMD">10</x:Double>
    <x:Double x:Key="RadiusLG">12</x:Double>
    <x:Double x:Key="RadiusXL">16</x:Double>
    <x:Double x:Key="RadiusXXL">18</x:Double>
    <x:Double x:Key="RadiusDialog">26</x:Double>

    <!-- ========================================== -->
    <!-- Design System - Component Sizes           -->
    <!-- ========================================== -->
    <x:Double x:Key="IconButtonSize">34</x:Double>
    <x:Double x:Key="IconButtonSizeLarge">40</x:Double>
    <x:Double x:Key="ButtonHeightDefault">40</x:Double>
    <x:Double x:Key="ButtonHeightCompact">36</x:Double>
    <x:Double x:Key="InputHeight">40</x:Double>

    <!-- ========================================== -->
    <!-- Design System - Typography Sizes          -->
    <!-- ========================================== -->
    <x:Double x:Key="FontSizeHeadline">20</x:Double>
    <x:Double x:Key="FontSizeSubheadline">18</x:Double>
    <x:Double x:Key="FontSizeTitle">16</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeTiny">10</x:Double>
    <x:Double x:Key="FontSizeMicro">9</x:Double>

</ResourceDictionary>