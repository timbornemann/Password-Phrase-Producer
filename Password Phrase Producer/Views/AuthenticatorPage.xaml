<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Password_Phrase_Producer.ViewModels"
             x:Class="Password_Phrase_Producer.Views.AuthenticatorPage"
             Title="Authenticator"
             BackgroundColor="#14141E">

    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,15" BackgroundColor="#1A1A24">
            <Label Text="Authenticator" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#E8EBFF" 
                   VerticalOptions="Center" />
            
            <ImageButton Source="add.png" 
                         HorizontalOptions="End" 
                         VerticalOptions="Center"
                         HeightRequest="24"
                         WidthRequest="24"
                         Command="{Binding AddEntryCommand}">
                <ImageButton.Source>
                    <FontImageSource Glyph="+" FontFamily="OpenSansSemibold" Size="24" Color="#7B8CFF" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>

        <!-- List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Entries}"
                        SelectionMode="None"
                        Margin="0,10,0,0">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                    <Label Text="Keine Einträge" 
                           FontSize="18" 
                           TextColor="#5A6080" 
                           HorizontalOptions="Center" />
                    <Button Text="Eintrag hinzufügen" 
                            Command="{Binding AddEntryCommand}"
                            BackgroundColor="#2A2A3A"
                            TextColor="#7B8CFF" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:TotpViewModelItem">
                    <Grid Padding="16,8">
                        <Border Stroke="Transparent"
                                BackgroundColor="#1F2338"
                                StrokeShape="RoundRectangle 12"
                                Padding="16">
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AuthenticatorViewModel}}, Path=CopyCodeCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>

                                <!-- Details -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding Issuer}" 
                                           FontSize="12" 
                                           TextColor="#7B8CFF" 
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding AccountName}" 
                                           FontSize="14" 
                                           TextColor="#A0A5BD" />
                                </VerticalStackLayout>

                                <!-- Code -->
                                <Label Grid.Row="1" Grid.Column="0" 
                                       Text="{Binding Code}" 
                                       FontSize="32" 
                                       FontAttributes="Bold" 
                                       TextColor="White"
                                       Margin="0,8,0,0"
                                       FontFamily="OpenSansSemibold" />

                                <!-- Progress/Timer -->
                                <StackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                                             VerticalOptions="Center" 
                                             Spacing="4"
                                             WidthRequest="40">
                                    <Label Text="{Binding RemainingSeconds}" 
                                           HorizontalOptions="Center" 
                                           TextColor="#5A6080" 
                                           FontSize="12" />
                                    <!-- Use a simple BoxView as bar or similar if Radial is complex. 
                                         Using ProgressBar for simplicity but rotated or small. -->
                                    <ProgressBar Progress="{Binding Progress}" 
                                                 ProgressColor="#7B8CFF"
                                                 ScaleY="4"
                                                 WidthRequest="40"
                                                 BackgroundColor="#2A2A3A" />
                                </StackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
