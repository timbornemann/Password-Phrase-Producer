<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_Phrase_Producer.Views.Security.SetupAppPasswordPage"
             Title="App-Passwort einrichten"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#512BD4</Color>
             <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="App-Passwort einrichten"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

            <Label Text="Dieses Passwort schützt alle Ihre Daten. Es wird beim Start der App abgefragt."
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Neues Passwort"
                   IsPassword="True"
                   Margin="0,20,0,0"/>

            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Passwort bestätigen"
                   IsPassword="True" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <Label Text="Biometrie aktivieren" VerticalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                <Switch x:Name="BiometricSwitch" OnColor="{StaticResource PrimaryColor}" />
            </StackLayout>

            <Button Text="Einrichten"
                    Clicked="OnSetupClicked"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>

            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
