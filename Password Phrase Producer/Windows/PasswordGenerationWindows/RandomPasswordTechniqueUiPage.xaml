<?xml version="1.0" encoding="utf-8" ?>
<local:PasswordGeneratorContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Password_Phrase_Producer.Windows.PasswordGenerationWindows.Controls"
             xmlns:local="clr-namespace:Password_Phrase_Producer.Windows.PasswordGenerationWindows"
             x:Class="Password_Phrase_Producer.Windows.PasswordGenerationWindows.RandomPasswordTechniqueUiPage">
    <VerticalStackLayout Spacing="16">
        <Border StrokeThickness="0"
                Padding="14"
                BackgroundColor="#1F2438">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="10">
                <Label Text="Konfiguration"
                       FontSize="15"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Konfiguriere die Einstellungen für dein zufälliges Passwort."
                       TextColor="#BDC2E8"
                       FontSize="12"
                       LineBreakMode="WordWrap"/>
                <Label Text="Länge"
                       FontSize="13"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Entry x:Name="lengthEntry"
                       Placeholder="Passwortlänge (z.B. 16)"
                       Keyboard="Numeric"
                       Style="{StaticResource DarkEntryStyle}"
                       Text="16" />
                <Label Text="Zeichentypen"
                       FontSize="13"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="0,6,0,0"/>
                <HorizontalStackLayout Spacing="6">
                    <CheckBox x:Name="uppercaseCheckBox"
                              IsChecked="True" />
                    <Label Text="Großbuchstaben (A-Z)"
                           FontSize="12"
                           VerticalOptions="Center"
                           TextColor="White" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="6">
                    <CheckBox x:Name="lowercaseCheckBox"
                              IsChecked="True" />
                    <Label Text="Kleinbuchstaben (a-z)"
                           FontSize="12"
                           VerticalOptions="Center"
                           TextColor="White" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="6">
                    <CheckBox x:Name="digitsCheckBox"
                              IsChecked="True" />
                    <Label Text="Zahlen (0-9)"
                           FontSize="12"
                           VerticalOptions="Center"
                           TextColor="White" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="6">
                    <CheckBox x:Name="specialCheckBox"
                              IsChecked="True" />
                    <Label Text="Sonderzeichen (!@#$...)"
                           FontSize="12"
                           VerticalOptions="Center"
                           TextColor="White" />
                </HorizontalStackLayout>
                <Label Text="Seed (optional)"
                       FontSize="13"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="0,6,0,0"/>
                <Label Text="Ein Seed ermöglicht die Reproduzierbarkeit des Passworts."
                       TextColor="#BDC2E8"
                       FontSize="12"
                       LineBreakMode="WordWrap"/>
                <Entry x:Name="seedEntry"
                       Placeholder="Optional: Seed für Reproduzierbarkeit"
                       Style="{StaticResource DarkEntryStyle}" />
            </VerticalStackLayout>
        </Border>

        <Border StrokeThickness="0"
                Padding="14"
                BackgroundColor="#1F2438">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="12">
                <Label Text="Zufälliges Passwort"
                       FontSize="15"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <Entry x:Name="resultEntry"
                           Placeholder="Generiertes Passwort"
                           Style="{StaticResource DarkEntryStyle}"
                           IsReadOnly="True" />
                    <Button Grid.Column="1"
                            Text="Kopieren"
                            Style="{StaticResource PrimaryActionButtonStyle}"
                            Clicked="OnCopyClicked"
                            HorizontalOptions="End" />
                </Grid>
                <Button Text="Passwort generieren"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Clicked="OnCreateClicked" />
                <ContentView x:Name="addToVaultHost"
                             IsVisible="False" />
                <controls:PasswordAnalysisPanel x:Name="analysisPanel"
                                                 IsVisible="False" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</local:PasswordGeneratorContentView>
